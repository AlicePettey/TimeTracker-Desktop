{
  "name": "timetracker-desktop",
  "version": "1.0.0",
  "description": "TimeTracker Desktop Companion - System-wide activity tracking",
  "main": "main.js",
  "author": {
    "name": "TimeTracker",
    "email": "support@ndsenterprises.llc"
  },
  "license": "MIT",
  "homepage": "https://github.com/timetracker/timetracker-desktop",
  "repository": {
    "type": "git",
    "url": "https://github.com/timetracker/timetracker-desktop.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "release": "electron-builder --publish always",
    "release:win": "electron-builder --win --publish always",
    "release:mac": "electron-builder --mac --publish always",
    "release:linux": "electron-builder --linux --publish always",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "active-win": "^8.1.0",
    "electron-log": "^5.1.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "rimraf": "^5.0.5"
  },
  "build": {
    "appId": "com.timetracker.desktop",
    "productName": "TimeTracker Desktop",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "copyright": "Copyright Â© 2024 TimeTracker",
    "asar": true,
    "compression": "maximum",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!**/*.map",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/**/*.d.ts",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!dist/**/*"
    ],
    "asarUnpack": [
      "**/*.node",
      "**/node_modules/active-win/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "timetracker",
      "repo": "timetracker-desktop",
      "releaseType": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "TimeTracker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TimeTracker Desktop",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": false,
      "perMachine": false,
      "allowElevation": true,
      "runAfterFinish": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        },
        {
          "target": "zip",
          "arch": ["universal"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icons",
      "category": "Office",
      "maintainer": "TimeTracker <support@ndsenterprises.llc>",
      "vendor": "TimeTracker",
      "synopsis": "System-wide time tracking",
      "description": "Track time across all applications with automatic idle detection and cloud sync"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  }
}
